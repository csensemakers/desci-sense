{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "functions debug",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/firebase",
      "args": ["emulators:start"],
      "env": {
        "NODE_ENV": "local",
        "IS_TEST": "true",
        "FIRESTORE_EMULATOR_HOST": "localhost:8080"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}
